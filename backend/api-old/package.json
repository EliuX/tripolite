{
   "name": "@tripolite/api",
   "version": "0.0.1",
   "description": "API for Tripolite",
   "type": "module",
   "main": "src/server.js",
   "scripts": {
      "preinstall": "npm run build --target=../../common",
      "build": "tsc",
      "prestart": "npm run build",
      "start": "node dist/server.js",
      "dev": "nodemon src/server.ts",
      "test": "npx jest",
      "typeorm": "typeorm-ts-node-commonjs",
      "migrate:create": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:create",
      "migrate:generate": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:generate -d ./src/data-source.ts",
      "migrate:up": "npm run typeorm migration:run -- -d ./src/data-source.ts",
      "migrate:down": "npm run typeorm migration:revert -- -d ./src/data-source.ts",
      "migrate": "npm run typeorm migration:run -- -d ./src/data-source.ts"
   },
   "keywords": [
      "backend",
      "api",
      "mongodb",
      "data",
      "express",
      "typeorm"
   ],
   "author": "EliuX",
   "license": "ISC",
   "dependencies": {
      "@tripolite/common": "file:../../common/src",
      "express": "^4.19.2",
      "reflect-metadata": "^0.1.13",
      "mongodb": "^5.9.2",
      "typeorm": "0.3.20"
   },
   "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/jest": "^29.5.12",
      "@types/node": "^16.11.10",
      "@types/supertest": "^6.0.2",
      "csv-parser": "^3.0.0",
      "jest": "^29.7.0",
      "supertest": "^7.0.0",
      "ts-jest": "^29.1.5",
      "ts-node": "^10.9.2",
      "tsc-watch": "^6.2.0",
      "typescript": "^4.5.2"
   },
   "jest": {
      "moduleFileExtensions": [
         "ts",
         "js",
         "json"
      ],
      "moduleNameMapper": {
         "^@/(.*)$": "<rootDir>/src/$1"
      },
      "transform": {
         "^.+\\.(ts|js)?$": "ts-jest"
      },
      "testMatch": [
         "**/tests/**/*.spec.(ts|js)"
      ],
      "testEnvironment": "node",
      "preset": "ts-jest",
      "moduleNameMapper": {
         "^@/(.*)$": "**/src/$1"
      },
      "transform": {
         "^.+\\.(ts|js)?$": "ts-jest"
      }
   }
}
