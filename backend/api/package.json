{
   "name": "@tripolite/api",
   "version": "0.0.1",
   "description": "API for Tripolite",
   "type": "module",
   "main": "src/server.js",
   "scripts": {
      "preinstall": "npm run build --target=../../common",
      "build": "tsc",
      "prestart": "npm run build",
      "start": "node --loader ts-node/esm src/index.ts",
      "start:dev": "tsc-watch --onSuccess \"node dist/server\"",
      "test": "echo \"Error: no test specified in the backend\"",
      "typeorm": "typeorm-ts-node-esm",
      "migration:create": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:create",
      "migration:generate": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:generate -d ./src/data-source.ts",
      "migration:up": "npm run typeorm migration:run -- -d ./src/data-source.ts",
      "migration:down": "npm run typeorm migration:revert -- -d ./src/data-source.ts",
      "migration:run": "npm run typeorm migration:run -- -d ./src/data-source.ts"
   },
   "keywords": [
      "backend",
      "api",
      "mongodb",
      "data",
      "express",
      "mikro-orm"
   ],
   "author": "EliuX",
   "license": "ISC",
   "dependencies": {
      "@tripolite/common": "file:../../common/src",
      "express": "^4.19.2",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.3.20"
   },
   "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/node": "^16.11.10",
      "csv-parser": "^3.0.0",
      "ts-node": "^10.9.1",
      "typescript": "4.5.2"
   }
}
