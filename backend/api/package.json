{
  "name": "@tripolite/api",
  "version": "0.0.1",
  "description": "API for Tripolite",
  "main": "src/server.js",
  "scripts": {
    "preinstall": "npm run build --target=../../common",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "tsc && node dist/server",
    "start:dev": "tsc-watch --onSuccess \"node dist/server\"",
    "seed": "npx mikro-orm seeder:run --class=DatabaseSeeder",
    "test": "echo \"Error: no test specified in the backend\""
  },
  "keywords": [
    "backend",
    "api",
    "mongodb",
    "data",
    "express",
    "mikro-orm"
  ],
  "author": "EliuX",
  "license": "ISC",
  "dependencies": {
    "@mikro-orm/core": "^6.2.9",
    "@mikro-orm/mongo-highlighter": "^1.0.0",
    "@mikro-orm/mongodb": "^6.2.9",
    "@mikro-orm/seeder": "^6.2.9",
    "@tripolite/common": "file:../../common/src",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongodb": "^6.8.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.2.9",
    "@mikro-orm/migrations": "^6.2.9",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "csv-parser": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
