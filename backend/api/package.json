{
  "name": "@tripolite/api",
  "version": "0.0.1",
  "description": "API for Tripolite",
  "main": "dist/server.js",
  "scripts": {
    "preinstall": "npm run build --target=../../common",
    "build": "tsc",
    "dev": "nodemon src/app.ts",
    "test": "npx jest",
    "prestart": "npm run build",
    "start": "node dist/app.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate:create": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:create",
    "migrate:generate": "node --loader ts-node/esm ./node_modules/.bin/typeorm migration:generate -d ./src/data-source.ts",
    "migrate:up": "npm run typeorm migration:run -- -d ./src/data-source.ts",
    "migrate:down": "npm run typeorm migration:revert -- -d ./src/data-source.ts",
    "migrate": "npm run typeorm migration:run -- -d ./src/data-source.ts"
  },
  "author": "EliuX",
  "license": "ISC",
  "dependencies": {
    "@tripolite/common": "file:../../common/src",
    "csv-parser": "^3.0.0",
    "express": "^4.19.2",
    "mongodb": "^5.9.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts|js)?$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.spec.(ts|js)"
    ],
    "testEnvironment": "node",
    "preset": "ts-jest",
    "moduleNameMapper": {
      "^@/(.*)$": "**/src/$1"
    },
    "transform": {
      "^.+\\.(ts|js)?$": "ts-jest"
    }
  },
  "keywords": [
    "backend",
    "api",
    "mongodb",
    "data",
    "express",
    "typeorm"
  ]
}
