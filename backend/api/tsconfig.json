{
  "compilerOptions": {
    "rootDirs": [
      "./src"
    ],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@tripolite/common/*": ["../../common/*"]
    }
  },
  "references": [
    {
      "path": "../../common"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
